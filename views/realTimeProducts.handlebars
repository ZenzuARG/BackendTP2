<section class="grid">
  <div>
    <h3>Crear producto</h3>
    <form id="formCreate">
      <input name="title" placeholder="title" required />
      <input name="description" placeholder="description" required />
      <input name="code" placeholder="code" required />
      <input name="price" placeholder="price" type="number" step="0.01" required />
      <input name="stock" placeholder="stock" type="number" required />
      <input name="category" placeholder="category" required />
      <input name="thumbnails" placeholder="thumbnails (coma sep)" />
      <label><input type="checkbox" name="status" checked /> status</label>
      <button type="submit">Crear</button>
    </form>

    <h3>Eliminar producto</h3>
    <form id="formDelete">
      <input name="id" placeholder="id del producto" required />
      <button type="submit">Eliminar</button>
    </form>
  </div>

  <div>
    <h3>Lista (tiempo real)</h3>
    <ul id="list"></ul>
  </div>
</section>

