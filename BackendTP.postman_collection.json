{
  "info": {
    "name": "Backend TP Entrega 1",
    "_postman_id": "c7b9f1e4-1a2b-4c90-9b0c-123456789abc",
    "description": "Colección de ejemplos para la API de productos y carritos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Listar productos",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/api/products"
      }
    },
    {
      "name": "Crear producto",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "http://localhost:8080/api/products",
        "body": {
          "mode": "raw",
          "raw": "{\"title\": \"Teclado Mecánico\", \"description\": \"Switches rojos\", \"code\": \"KB-RED-001\", \"price\": 89999.99, \"status\": true, \"stock\": 12, \"category\": \"perifericos\", \"thumbnails\": [\"/imgs/teclado.png\"]}"
        }
      }
    },
    {
      "name": "Obtener producto por id",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/api/products/{{pid}}"
      }
    },
    {
      "name": "Actualizar producto",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "http://localhost:8080/api/products/{{pid}}",
        "body": {
          "mode": "raw",
          "raw": "{\"price\":79999,\"stock\":20}"
        }
      }
    },
    {
      "name": "Eliminar producto",
      "request": {
        "method": "DELETE",
        "url": "http://localhost:8080/api/products/{{pid}}"
      }
    },
    {
      "name": "Crear carrito",
      "request": {
        "method": "POST",
        "url": "http://localhost:8080/api/carts"
      }
    },
    {
      "name": "Listar productos del carrito",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/api/carts/{{cid}}"
      }
    },
    {
      "name": "Agregar producto al carrito",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "http://localhost:8080/api/carts/{{cid}}/product/{{pid}}",
        "body": {
          "mode": "raw",
          "raw": "{\"quantity\":1}"
        }
      }
    }
  ]
}